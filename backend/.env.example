# Financial News Aggregator Backend Configuration

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Cache Backend Configuration
CACHE_BACKEND=memory  # options: memory, redis
REDIS_URL=

# Scheduler Configuration
SCHEDULER_ENABLED=true
SCHEDULER_INITIAL_DELAY_SECONDS=5

# News Sources Configuration
REFRESH_INTERVAL_MINUTES=15
REQUEST_TIMEOUT_SECONDS=10
MAX_HEADLINES_PER_SOURCE=10

# Cache Configuration
CACHE_TTL_MINUTES=15

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# News Source URLs (RSS Feeds)
WSJ_RSS_URL=https://feeds.a.dj.com/rss/RSSMarketsMain.xml
BLOOMBERG_RSS_URL=https://feeds.bloomberg.com/markets/news.rss
CNBC_RSS_URL=https://www.cnbc.com/id/100003114/device/rss/rss.html
DEALSTREETASIA_RSS_URL=https://www.dealstreetasia.com/feed/
BUSINESS_TIMES_RSS_URL=https://www.businesstimes.com.sg/rss/companies
THE_EDGE_RSS_URL=https://www.theedgemarkets.com/categories/capital-markets/rss
SCMP_RSS_URL=https://www.scmp.com/rss/91/feed

# Fallback Scraping URLs (if RSS fails)
WSJ_SCRAPE_URL=https://www.wsj.com/news/markets
BLOOMBERG_SCRAPE_URL=https://www.bloomberg.com/markets
CNBC_SCRAPE_URL=https://www.cnbc.com/markets/
